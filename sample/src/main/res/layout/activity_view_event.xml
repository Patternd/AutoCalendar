<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alamkanak.weekview.sample.ViewEvent">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="16dp"
        android:text="@string/titleText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="24dp"
        android:text="@string/location"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/locView"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/locView"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/startdateView"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="18dp"
        android:text="@string/startdateView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/startDate"
        app:layout_constraintTop_toBottomOf="@+id/location" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locView" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="18dp"
        android:text="@string/startTime"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/startText"
        app:layout_constraintTop_toBottomOf="@+id/enddateView" />

    <TextView
        android:id="@+id/startText"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endDate" />

    <TextView
        android:id="@+id/endTime"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="23dp"
        android:text="@string/endTime"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/endText"
        app:layout_constraintTop_toBottomOf="@+id/startTime" />

    <TextView
        android:id="@+id/endText"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startText" />

    <TextView
        android:id="@+id/description"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="21dp"
        android:text="@string/description"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/descripText"
        app:layout_constraintTop_toBottomOf="@+id/endTime"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/descripText"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/enddateView"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="12dp"
        android:text="@string/enddateView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/endDate"
        app:layout_constraintTop_toBottomOf="@+id/startdateView" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDate" />
</android.support.constraint.ConstraintLayout>
